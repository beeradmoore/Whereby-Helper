{
  "manifest_version": 2,
  "name": "Whereby Helper",
  "version": "1.1.1",
  "icons": {
    "16": "Icon_16.png",
    "48": "Icon_48.png",
    "128": "Icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.whereby.com/*"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "notifications",
    "storage"
  ],
  "commands": {
    "toggle-cam": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Toggle camera",
      "global": true
    },
    "toggle-mic": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "Toggle microphone",
      "global": true
    },
    "focus-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Bring browser to front and select tab",
      "global": true
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}